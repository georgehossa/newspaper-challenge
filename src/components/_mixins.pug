//- Intro Articles
mixin introArticle(article, lead)
  .article--intro
    h2.article__section= article.section
    h3.article__title= article.title
    p.article__lead= lead
    if article.section == 'Suplemento'
      span.article__index Suplemento Especial
    else
      span.article__index= 'Pag.'+article.page

//- Section Title
mixin sectionTitle(sectionName, page, color)
  -var color = color
  if color
    .section.section--color
      .section__name= sectionName
      if page
        .section__page= page
  else
    .section
      .section__name= sectionName
      if page
        .section__page= page

//- Article
